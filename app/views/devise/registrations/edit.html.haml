%h2
  = t('.title')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_registration_error_messages!(:edit)
  -#%div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %i= t('.leave_blank')
    %br/
    = f.password_field :password, :autocomplete => "off"
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :current_password
    %i= t('.current_password_notice')
    %br/
    = f.password_field :current_password
    %br
    = link_to t('forgot_password'), new_user_password_path
  %div= f.submit t('update')
%p
  = t('devise.unhappy')
  = link_to t('devise.cancel_account'), registration_path(resource_name), :data => { :confirm => t('are_you_sure') }, :method => :delete
= link_to t('back'), :back
